
      <div class="container">
          <div class="row">
            <%= render '/users/info', book: @book_new, user: @user %>
      

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-striped">
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
            <tr>
             <td>
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image, size: "100x100" %>
                    <% else %>
                      <%= image_tag 'default_image', size: "100x100" %>
                <% end %><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td> <%= link_to @book.title, book_path(@book.id) %> </td>
              <td> <%= @book.body %> </td>
              <td> <% if @book.user == current_user %>
                   <%= link_to "Edit", edit_book_path(@book.id), class:"text-light btn btn-success" %></td>
                   <% end %>
              <td> <% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"text-light btn btn-danger", "data-confirm" => "本当に消しますか？" %>
                   <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
