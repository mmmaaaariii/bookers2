<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
  </head>

  <body>
    <header></header>
    <main>
      <div><%= flash[:notice] %></div>
        <div class="container">
          <div class="row align-items-start">
            <div class="col-md-3">
              
            <% if @book.errors.any? %>
            <%= @book.errors.count %>error
            <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
            <% end %>
              
              <h2>User info</h2>
                  <p>
                    <% if @user.image.attached? %>
                      <%= image_tag @user.image, size: "100x100" %>
                        <% else %>
                          <%= image_tag 'default_image', size: "100x100" %>
                    <% end %>
                  </p>
                  <p>name：<%= @user.name %></p>
                  <p>introduction：<%= @user.introduction %></p>
                  <li>
                    <%= link_to "Edit", edit_user_path(@user.id) %>
                  </li>
            
                  <h2>New book</h2>
                    <%= form_with model: @book_new do |f| %>
                  <h4>Title</h4>
                    <%= f.text_field :title %>
                  <h4>Opinion</h4>
                    <%= f.text_area :body %>
                  <li>
                    <%= f.submit 'Creat Book' %>
                  </li>
                    <% end %>
             </div>        

         <div class="offset-md-1"></div>
           <div class="col-md-8">
      <h2>Book detail</h2>
        <table class="table table-striped">
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
            <tr>
             <td>
                <% if @user.image.attached? %>
                  <%= image_tag @user.image, size: "100x100" %>
                    <% else %>
                      <%= image_tag 'default_image', size: "100x100" %>
                <% end %><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td> <%= link_to @book.title, book_path(@book.id) %> </td>
              <td> <%= @book.body %> </td>
              <td> <% if @book.user == current_user %>
                   <%= link_to "Edit", edit_book_path(@book.id) %></td>
                   <% end %>
              <td> <% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %> 
                   <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </main>
  </body>

  <footer>
    <div class="row justify-content-center">
     <p>CopyRight Infratop.inc</p>
    </div>
  </footer>