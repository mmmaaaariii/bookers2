<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
  </head>

  <body>
    <header></header>

    <main>
      <h2>User info</h2>
          <p>
            <% if @user.image.attached? %>
              <%= image_tag @user.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'default_image', size: "100x100" %>
            <% end %>
          </p>
          <p>name：<%= @user.name %></p>
          <p>introduction：<%= @user.introduction %></p>
          <li>
            <%= link_to "Edit", edit_user_path(@user.id) %>
          </li>
    
    
          <h2>New book</h2>
            <%= form_with model: @book do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <li>
            <%= f.submit 'Creat Book' %>
          </li>
            <% end %>

      <h2>Books</h2>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
             <td>
                <% if book.user.image.attached? %>
                  <%= image_tag book.user.image, size: "100x100" %>
                    <% else %>
                      <%= image_tag 'default_image', size: "100x100" %>
                <% end %>
              </td>
              <td> <%= link_to book.title, book_path(book.id) %> </td>
              <td> <%= book.body %> </td>
            </tr>
          <% end %>
        </table>
    </main>
  </body>

  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>