<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
  </head>

  <body>
    <header></header>

    <main>
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
        <%= @book.errors.count %>error
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
        
        <%= form_with model: @book do |f| %>
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
          <label for="inputOpinion">Opinion</label>
          <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion"%>
          <%= f.submit "Update Book" %>
        <% end %>
        <table>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <td>
              <td> <%= link_to "Show", book_path(@book.id) %></td>
              <td></td>
              <td> <%= link_to "Back", books_path %> </td>
            </tr>
        </table>
    </main>
  </body>

  <footer>
    <div class="row justify-content-center">
     <p>CopyRight Infratop.inc</p>
    </div>
  </footer>