<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
  </head>

  <body>
    <main>
      <div class="container">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
        <%= @book.errors.count %>error
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
        
        <%= form_with model: @book do |f| %>
          <div for="inputTitle">Title</div>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
          <div for="inputOpinion">Opinion</div>
          <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion"%>
          <div></div>
          <%= f.submit "Update Book" %>
        <% end %>
        
        <table>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <td>
              <td> <%= link_to "Show", book_path(@book.id) %></td>
              <td></td>
              <td> <%= link_to "Back", books_path %> </td>
            </tr>
        </table>
      </div>
    </main>
  </body>

  <footer>
    <div class="row justify-content-center">
     <p>CopyRight Infratop.inc</p>
    </div>
  </footer>