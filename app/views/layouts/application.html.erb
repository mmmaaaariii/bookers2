<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/ef37b76ac6.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#000000;">
        <div class="container">
          <%= link_to root_path, class:"text-light" do%>Bookers
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
          <ul class="navbar-nav ml-auto">
              <div class="col-3">
              <%= link_to user_path(current_user.id), class:"text-light" do %>
              <i class="fas fa-home"></i>Home
              <% end %>
              </div>
              <div class="col-3">
              <%= link_to users_path, class:"text-light" do %>
              <i class="fa-solid fa-users"></i>Users
              <% end %>
              </div>
              <div class="col-3">
              <%= link_to books_path, class:"text-light" do %>
              <i class="fa-solid fa-book-open"></i>Books
              </div>
              <% end %>
              <div class="col-3">
              <%= link_to destroy_user_session_path, method: :delete, class:"text-light" do %>
              <i class="fa-solid fa-right-from-bracket"></i>Log out
              <% end %>
              </div>
          </ul>
      <% else %>
      <ul class="navbar-nav ml-auto">
              <div class="col-3">
              <%= link_to root_path, class:"text-light" do %>
              <i class="fas fa-home"></i>Home
              <% end %>
              </div>
              <div class="col-3">
              <%= link_to about_path, class:"text-light" do %>
              <i class="fa-solid fa-link"></i>About
              <% end %>
              </div>
              <div class="col-3">
              <%= link_to new_user_registration_path, class:"text-light" do %>
              <i class="fas fa-user-plus"></i>Sign up
              <% end %>
              </div>
              <div class="col-3">
              <%= link_to new_user_session_path, class:"text-light" do %>
              <i class="fas fa-sign-in-alt"></i>Log in
              <% end %>
              </div>
      </ul>
      <% end %>
         </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
  </body>
</html>