
            <div class="col-md-3">
            <%= flash[:notice] %>
            <% if book.errors.any? %>
            <%= book.errors.count %>errors
            <ul>
            <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
            <% end %>

              <h2>User info</h2>
                  <p>
                    <% if user.profile_image.attached? %>
                      <%= image_tag user.profile_image, size: "100x100" %>
                        <% else %>
                          <%= image_tag 'default_image', size: "100x100" %>
                    <% end %>
                  </p>
                  <p>name：<%= user.name %></p>
                  <p>introduction：<%= user.introduction %></p>
                  <p>
                    <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary" do %>
                    <i class="fa-solid fa-user-gear"></i>
                    <% end %>
                  </p>


                  <h2>New book</h2>
                    <%= form_with model: book do |f| %>
                  <h4>Title</h4>
                    <%= f.text_field :title %>
                  <h4>Opinion</h4>
                    <%= f.text_area :body %>
                  <p>
                  <%= f.submit "Create Book", class:"btn btn-success"%>
                  </p>
                  <% end %>
             </div>